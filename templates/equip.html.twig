{% block stylesheets %} <link href="{{ asset('css/equip.css') }}" rel="stylesheet" /> {% endblock %}

{% block body %}    

    <h3 id="titolEquip" class="uk-margin-large-top">Dades de l'equip {{ equip.codi }}</h3>

    <div class="uk-container uk-container-center uk-margin-large-top uk-overflow-auto">

        <table class="uk-table uk-table-hover uk-table-divider">
    
            <thead>
                <tr>
                    <th>Codi</th>
                    <th>Equip</th>
                    <th>Cicle</th>
                    <th>Curs</th>
                    {# <th>Membres</th> #}
                </tr>
            </thead>
            
            <tbody>
                <tr>
                    <td>{{ equip.codi }}</td>
                    <td>{{ equip.nom }}</td>
                    <td>{{ equip.cicle }}</td>
                    <td>{{ equip.curs }}</td>
                </tr>

            </tbody>

        </table>

        <div id="membres" class="uk-card uk-card-default uk-card-body">

            <h3 class="uk-card-title">Membres</h3>

            <div class="uk-child-width-expand@s uk-text-center uk-margin-large-top" uk-grid>

                {% for membre in equip.membres %}
                    <div>
                        <div class="uk-card uk-card-default uk-card-body">{{ membre }}</div>
                    </div>
                {% endfor %}

            </div>
        
        </div>

    </div>

{% endblock %}