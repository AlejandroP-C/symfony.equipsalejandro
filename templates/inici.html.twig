{% extends 'base.html.twig' %}
{% block title %}Inici EquipsAlejandro{% endblock %}
{% block stylesheets %} <link href="{{ asset('css/inici.css') }}" rel="stylesheet" /> {% endblock %}
{% block body %}
    <h2 id="titolInici">Projecte Symfony Equips 2n DAW</h2>
    <p id="paragrafInici">Inici programa gesti√≥ d'equips i membres del projecte 2n DAW.</p>

    <div class="uk-margin-medium uk-container uk-container-center uk-flex uk-flex-center">
        <a href="{{ path('dades_equip', {'codi': 2}) }}">
            <img class="imatgeInici" src="{{ asset('img/imatge_inici.png') }}">
        </a>
    </div>

    <div id="equips" class="uk-container uk-container-center uk-overflow-auto">

        <div class="uk-card uk-card-default uk-card-body">

            <h3 class="uk-card-title">Equips</h3>

                <div class="uk-child-width-expand@s uk-text-center uk-margin-large-top" uk-grid>

                    {% for equip in equips %}
                        <div>
                            <a href="{{ path('dades_equip', {'codi': equip.codi}) }}" class="uk-card uk-card-default uk-card-body uk-card-hover {{equip.nom}}">{{ equip.nom }}</a>
                        </div>
                    {% endfor %}

                </div>
            
            </div>

        </div>

    </div>

{% endblock %}