{% extends 'base.html.twig' %}
{% block stylesheets %} <link href="{{ asset('css/inserir_equip.css') }}" rel="stylesheet" /> {% endblock %}
{% block title %}Inserir{% endblock %}
{% block body %}

    <div class="center">
    
        {% if error == NULL %}

            {% for equip in equips %}
                <div class="success">
                    <img src="{{ asset('img/success.png') }}">
                    <p>Equip {{equip.getId()}} amb nom {{equip.getNom()}} inserit correctament</p>
                </div>
            {% endfor %}
            
        {% else %}

            {% for equip in equips %}
            
                <div class="alert">
                    <img src="{{ asset('img/error.png') }}">
                    <p>Error amb la inserci√≥ de l'equip {{equip.getNom()}}</p>
                </div>
                
            {% endfor %}

            <div class="info">
                <img src="{{ asset('img/info.png') }}">
                <p id="missatge">{{error}}</p>
            </div>

        {% endif %}
    
    </div>

{% endblock body %}