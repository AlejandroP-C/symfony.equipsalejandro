<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="{{ asset('css/header.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/footer.css') }}" rel="stylesheet" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- UIkit CSS -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/css/uikit.min.css" />

            <!-- UIkit JS -->
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/js/uikit.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.13/dist/js/uikit-icons.min.js"></script>

        {% endblock %}
    </head>
    <body>

        <div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky">        
        
            <div class="uk-navbar-container" uk-navbar>

                <div class="uk-navbar-center">

                    <div class="uk-navbar-item uk-logo uk-flex uk-flex-inline uk-flex-between">
                        <img  src="{{ asset('img/logo_symfony.png') }}" class="rounded logo_symfony">
                    </div>
                    
                    <div class="button-group">

                        <a class="uk-button uk-button-default" href="{{ path('inici') }}">Inici</a>

                        <a class="uk-button uk-button-default" href="{{ path('dades_equip', {'codi': 1}) }}">Equips</a>

                        <div class="uk-inline">

                            <button class="uk-button uk-button-default" type="button">Dades</button>

                            <div uk-dropdown="animation: reveal-top; animate-out: true; duration: 400">

                                <ul class="uk-nav uk-dropdown-nav">

                                    <div class="uk-inline">

                                        <li class="uk-nav-header">Inserir</li>

                                        <div uk-dropdown="animation: reveal-left; animate-out: true; duration: 400">

                                            <ul class="uk-nav uk-dropdown-nav">

                                                <li><a href="{{ path('inserir_equip') }}">Equip</a></li>
                                                <li><a href="{{ path('inserir_multiples_equips') }}">MÃºltiples Equips</a></li>
                                                <li><a href="{{ path('inserir_membre') }}">Membre</a></li>

                                            </ul>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </div>

                        <a class="uk-button uk-button-default" href="">#</a>

                    </div>

                    <div></div>

                </div>

            </div>
        
        </div>

        {% block body %}{% endblock %}

        <footer id="footer" class="footer-distributed" uk-sticky="position: bottom">
        
            <div class="footer-center">

                <div>
                    <p>IES Luis Simarro</p>
                    <p>Curs 22 / 23</p>
                </div>

            </div>

        </footer>

    </body>

</html>
